package {{ .Package }}

import (
    "github.com/jmoiron/sqlx"
    _ "github.com/lib/pq"
)

type DB struct {
	*sqlx.DB
}

func Open(url string) (*DB, error) {
    db, err := sqlx.Open("{{ .Driver }}", url)
    if err != nil {
        return nil, err
    }
    {{ if .MaxOpen }}db.SetMaxOpenConns({{ .MaxOpen }}){{ end }}
    {{ if .MaxIdle }}db.SetMaxIdleConns({{ .MaxIdle }}){{ end }}
    return &DB{DB: db}, nil
}

type Force bool

const F Force = true